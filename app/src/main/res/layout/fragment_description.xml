<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/Linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.exoplayer2.ui.SimpleExoPlayerView
            android:id="@+id/player_view"
            android:layout_width="match_parent"
            android:layout_height="250dp" />

        <TextView
            android:id="@+id/version_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:text="This is where each individual description will appear"
            android:textAppearance="?android:attr/textAppearanceMedium" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/i_left"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:drawableLeft="@drawable/i_left"
        android:layout_weight="2.3"
        android:layout_gravity="right"
        android:background="@color/colorAccent"
        android:layout_margin="@dimen/defult_8"/>
    <Button
        android:id="@+id/i_right"
        android:layout_width="0dp"
        android:drawableRight="@drawable/i_right"
        android:layout_weight="2.3"
        android:background="@color/colorAccent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="left"
        />

</LinearLayout>
    </LinearLayout>
</RelativeLayout>